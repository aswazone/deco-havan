<%- include("../../views/partials/user/header")%>


<div class="container my-5">
  <!-- Profile Header -->
  <div class="card mb-4">
    <div class="card-img-top position-relative">
      <img src="images/profile-banner.png" alt="Banner image" class="w-100 rounded-top">
      <div class="position-absolute bottom-0 start-50 translate-middle-x">
        <img src="images/1.png" alt="User Image" class="rounded-circle border border-white border-3" style="width: 120px; height: 120px;">
      </div>
    </div>
    <div class="card-body text-center mt-5">
      <h4 class="card-title mb-2">John Doe</h4>
      <p class="text-muted mb-2">UX Designer | Vatican City</p>
      <small class="text-muted">Joined April 2021</small>
      <div class="mt-3">
        <button class="btn btn-primary">
          <i class="bi bi-person-check"></i> Connected
        </button>
      </div>
    </div>
  </div>

  <!-- Profile Navigation -->
  <ul class="nav nav-pills mb-4 justify-content-center">
    <li class="nav-item"><a class="nav-link active" href="#">Profile</a></li>
    <li class="nav-item"><a class="nav-link" href="#">Teams</a></li>
    <li class="nav-item"><a class="nav-link" href="#">Projects</a></li>
    <li class="nav-item"><a class="nav-link" href="#">Connections</a></li>
  </ul>

  <!-- Main Content -->
  <div class="row">
    <!-- Left Column -->
    <div class="col-lg-4">
      <!-- About User -->
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">About</h5>
          <ul class="list-unstyled">
            <li><strong>Full Name:</strong> John Doe</li>
            <li><strong>Status:</strong> Active</li>
            <li><strong>Role:</strong> Developer</li>
            <li><strong>Country:</strong> USA</li>
            <li><strong>Languages:</strong> English</li>
          </ul>
        </div>
      </div>

      <!-- Contacts -->
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Contacts</h5>
          <ul class="list-unstyled">
            <li><strong>Phone:</strong> (123) 456-7890</li>
            <li><strong>Skype:</strong> john.doe</li>
            <li><strong>Email:</strong> john.doe@example.com</li>
          </ul>
        </div>
      </div>

      <!-- Teams -->
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Teams</h5>
          <ul class="list-unstyled">
            <li>Backend Developer (126 Members)</li>
            <li>React Developer (98 Members)</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Right Column -->
    <div class="col-lg-8">
      <!-- Activity Timeline -->
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Activity Timeline</h5>
          <ul class="timeline list-unstyled">
            <li class="mb-3">
              <div>
                <strong>12 Invoices Paid</strong> <span class="text-muted">12 min ago</span>
                <p class="mb-1">Invoices have been paid to the company.</p>
                <a href="#" class="btn btn-sm btn-light">View</a>
              </div>
            </li>
            <li class="mb-3">
              <div>
                <strong>Client Meeting</strong> <span class="text-muted">45 min ago</span>
                <p class="mb-1">Project meeting with John at 10:15 AM.</p>
              </div>
            </li>
            <li>
              <div>
                <strong>New Project Created</strong> <span class="text-muted">2 Days Ago</span>
                <p class="mb-1">6 team members in the project.</p>
              </div>
            </li>
          </ul>
        </div>
      </div>

      <!-- Connections -->
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Connections</h5>
          <ul class="list-group">
            <li class="list-group-item d-flex align-items-center">
              <img src="images/2.png" alt="Avatar" class="rounded-circle me-3" style="width: 50px;">
              <div>
                <strong>Cecilia Payne</strong> <br>
                <small>45 Connections</small>
              </div>
              <button class="btn btn-sm btn-primary ms-auto">Connect</button>
            </li>
            <li class="list-group-item d-flex align-items-center">
              <img src="images/3.png" alt="Avatar" class="rounded-circle me-3" style="width: 50px;">
              <div>
                <strong>Curtis Fletcher</strong> <br>
                <small>1.32k Connections</small>
              </div>
              <button class="btn btn-sm btn-danger ms-auto">Remove</button>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>





