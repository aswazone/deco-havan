<!-- Start Hero Section -->
<div id="heroCarousel" class="swiper">
  <div class="swiper-wrapper">
    <% banner.slice(0, 3).forEach(bannerItem=> { %>
    <div class="swiper-slide">
      <img
        src="uploads/banner/<%= bannerItem.image %>"
        class="d-block w-100 img-fluid"
        alt="Hero Image"
      />
      <div class="carousel-caption d-none d-md-block">
        <a href="/shop" style="color: #fce3a5">
          <div class="intro-excerpt" style="margin-bottom: 100px">
            <h1
              class="display-4"
              style="
                text-shadow: -5px 4px 12px rgb(0 0 0 / 65%);
                font-weight: 600;
                font-size: 3.5rem;
                font-family: 'Nunito', sans-serif;
              "
            >
              <%= bannerItem.title %>
            </h1>
            <p class="lead mb-4" style="text-shadow: 0px 4px 16px 0px #313131">
              <%= bannerItem.description %>
            </p>
            <p>
              <a
                href="/shop"
                class="btn btn-secondary me-2"
                style="box-shadow: 0px 4px 16px 0px #313131"
                >Shop Now</a
              >
              <a
                href="/shop"
                class="btn btn-success-outline"
                style="box-shadow: 0px 4px 16px 0px #313131"
                >Explore</a
              >
            </p>
          </div>
        </a>
      </div>
    </div>
    <% }); %>
  </div>

  <!-- Navigation buttons -->
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-pagination"></div>
</div>

<!-- End Hero Section -->

<!-- Start Product Section -->
<div class="product-section">
  <div class="container">
    <div class="row">
      <!-- Start Column 1 -->
      <div class="col-md-12 col-lg-3 mb-5 mb-lg-0">
        <h2 class="mb-4 section-title">Crafted with excellent material.</h2>
        <p class="mb-4 first-para">
          Experience the ultimate comfort and style with our furniture collection.
          From plush sofas to sleek coffee tables, our pieces are designed to
          elevate your living space and make it a reflection of your personal
          style.
        </p>
        <p><a href="/shop" class="btn btn-explore">Explore</a></p>
      </div>
      <!-- End Column 1 -->
      <% if (product && product.length > 0) { %>
      <% for (var i=product.length - 1; i>= product.length - 3; i--) { %>

      <div class="col-12 col-md-4 col-lg-3 mb-0 mb-md-0">
        <a class="product-item" href="/productDetail/<%=product[i]?._id%>">
          <img
            src="uploads/product-images/<%= product[i].productImage[0] %>"
            alt="Image"
            style="border-radius: 8px"
            class="img-fluid product-thumbnail"
          />
          <h3 class="product-title text-left"><%= product[i].productName %></h3>
          <strong class="product-price text-left"
            >₹ <%= product[i].salePrice %></strong
          >

        </a>
      </div>
      <% } %>
      <% } else { %>
      <div class="col-12 col-md-4 col-lg-3 mb-0 mb-md-0">
        <div class="product-item">
          <h3 class="product-title text-left">No product found</h3>
