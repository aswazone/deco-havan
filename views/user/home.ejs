<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  const urlParams = new URLSearchParams(window.location.search);
  const status = urlParams.get("status");

  if (status === "blocked") {
    Swal.fire({
      toast: true,
      position: "top-end",
      icon: "error",
      title: "Account Blocked",
      text: "Your account has been blocked by the admin.",
      showConfirmButton: false,
      timer: 3000,
    });
  } else if (status === "deleted") {
    Swal.fire({
      toast: true,
      position: "top-end",
      icon: "warning",
      title: "Account Deleted",
      text: "Your account no longer exists. Please contact support if this is a mistake.",
      showConfirmButton: false,
      timer: 3000,
    });
  }

  document.addEventListener("scroll", function () {
    const navbar = document.querySelector(".custom-navbar");
    if (window.scrollY > 50) {
      document.body.classList.add("scrolled");
    } else {
      document.body.classList.remove("scrolled");
    }
  });

  document.addEventListener("DOMContentLoaded", function () {
    const swiper = new Swiper("#heroCarousel", {
      loop: true, // Allows infinite loop
      autoplay: {
        delay: 5000, // Auto slide every 5 seconds
        disableOnInteraction: false, // Keeps autoplay on after manual interaction
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      effect: "fade", // Smooth fade effect
      fadeEffect: {
        crossFade: true,
      },
      speed: 800, // Transition speed in ms
    });
  });
</script>
