                  position: relative;
                  right: -300px;
                  top: -34px;
                }

                .product-grid{
                    margin-left: 1px;
                }

                .product-item img {
                    background-color: aliceblue;
                    border: #fbfaf0e1 8px solid;
                    box-shadow: 0 3px 10px 1px rgba(0, 0, 0, 0.15);
                    border-radius: 12px;
                    overflow: hidden;
                }
